<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/Fonts.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Open Sans";
        }
        img.logo {
            display: block;
            position: relative;
            margin: 32px auto 0 auto;
        }
        div.container {
            width: 100%;
            max-width: 320px;
            margin: 0 auto;
        }

        label {
            display: block;
            color: #999;
            text-transform: uppercase;
            font-weight: 900;
            font-size: 14px;
        }

        form {
            width: 100%;
            max-width: 280px;
            margin: 0 auto;
        }

        input[type=text], input[type=password] {
            box-sizing: border-box;
            display: block;
            width: 100%;
            border-top: none;
            border-right: none;
            border-left: none;
            border-bottom: 2px solid #000;
            font-size: 20px;
            padding: 6px;
            margin-bottom: 16px;
        }

        input[type=submit] {
            display: block;
            box-sizing: border-box;
            width: 100%;
            background-color: #000;
            color: #fff;
            font-weight: 900;
            text-transform: uppercase;
            padding: 8px;
            border: none;
            margin: 8px 0;
        }

        h2 {
            font-weight: 900;
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <img class="logo" src="~/Content/svg/LogoHorizontal.svg" alt="Tunr Logo" />
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
